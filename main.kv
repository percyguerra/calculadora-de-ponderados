		name: 'third'
		BoxLayout:
			orientation: 'vertical'
			padding: 30
			spacing: 30
			canvas:
				Color:
					rgb: 0.71,0.76,0.78
				Rectangle:
					size: self.size
					pos: self.pos
			Label:
				size_hint: 1, 0.5
				bold: True
				text: 'Ingrese el nombre del curso:'
				color: 0,0,0,1
